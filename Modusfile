project("demo").

config("demo", "f1x", "-f sort.c -d test.sh -t long -T 100").

checkout("demo", "/home/f1x_demo") :-
	copy("./demo", "/home/f1x_demo").

patch(tool, project) :-
	from("mechtaev/f1x"),
	checkout(project, project_dir),
	config(project, tool, config),
	run(f"cd ${project_dir} && f1x ${config}").
